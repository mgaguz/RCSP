<div class="page-header">
  <%= link_to tags_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Volver
  <% end %>

  <%= link_to edit_tag_path(@tag), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>

  <h1>Tema: <%= @tag.etiqueta %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Atenciones:</dt>
  <dd>

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nombre Paciente</th>
            <th>Fecha de atencion</th>
          </tr>
        </thead>
        <tbody>
          <% @tag.patients.each do |k| %>
            <tr>
              <td>
                <a href="/pacientes/<%=k.human_id%>/atenciones/<%=k.id%>"><%=k.nombre%></a>
              </td>
              <td><%=k.fecha.strftime('%d/%m/%Y') %></td>
            </tr>
          <%end%>  
        </tbody>
      </table>
    </div>

  </dd>

</dl>
