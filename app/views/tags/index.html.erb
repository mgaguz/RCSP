<div class="page-header">
  <%= link_to new_tag_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Nuevo Tema
  <% end %>
  
  <h1>Listado de Temas</h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
                <th>Nombre</th>
                <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @tags) do |tag| %>
                <td><%= tag.etiqueta %></td>
                <td><%= link_to 'Ver', tag %></td>
            <td><%= link_to 'Editar', edit_tag_path(tag) %></td>
            <td><%= link_to 'Borrar', tag, method: :delete, data: { confirm: 'Seguro Segurin Segurolas?' } %></td>
          <% end %>
        </tbody>
      </table>
    </div>


  </div>
</div>   