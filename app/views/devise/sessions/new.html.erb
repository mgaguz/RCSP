
<div class="panel-login">
  <div class="panel-body">
    <h4 class="text-center">Ingresar</h4>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control input-sm', placeholder: 'Email' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control input-sm', placeholder: 'Password' %>
      </div>

      <div class="form-group">
        <%= f.submit "Iniciar SesiÃ³n", class: 'btn btn-info btn-sm btn-block' %>
      </div>

      <% if devise_mapping.rememberable? -%>

          <%= f.check_box :remember_me %>
          <%= f.label 'Recordar' %>

      <% end -%> 

    <% render "devise/shared/links" %>

    <% end %>

  </div>
</div>


